html
  head
    title Kubercade Home
    style
      include style.css
    link(href="https://fonts.googleapis.com/css?family=Lexend+Deca|Press+Start+2P&display=swap" rel="stylesheet")
    script
      include js/navigation.js
  body
    #wrapper_grid
      #nav_bar
        a.logo(onClick='changeActivePage("/nexus")')
          img(src='images/kubercade logo.png' alt='Kubercade logo')
        a.navtab(onClick='changeActivePage("/nexus")')
          div Nexus
        .navtab.dropdown
          div Games
          .dropdown-content
            a.navtab(onClick='changeActivePage("/games/pacman")') Pac-Man
        .navtab.dropdown
          div High Scores
          .dropdown-content
            a.navtab(onClick='changeActivePage("/scores/pacman")') Pac-Man
      #content_window
        iframe#kubercade_iframe(
          src='/nexus'
        )
      #chat_window
        #chat_top_bar
          a.dropdown.clickable Chat - #{game} &#x25BE
            .dropdown-content
              a.clickable Pac-Man
              a.clickable Some other game
        #chat_messages
          each _ in Array(30)
            .individual_chat_message
              p.author Bill Gates
              p.text This is what a chat message will look like.
        #chat_form
          .input_row
            a(onClick="#").refresh_button.clickable &#x1F504
            input(type="text" placeholder="Name (optional)").text_input.name_input
            a(onClick="#").submit_button.clickable Send
          .input_row
            textarea(placeholder="Say something...").text_input.message_input
            p#chat_char_counter 0/400
